{
  "$schema": "../../node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "icons",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/icons/**/*.svg",
          "/icons/pwa/*.png"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/images/**/*",
          "/screenshots/**/*"
        ]
      }
    },
    {
      "name": "fonts",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "urls": [
          "https://fonts.googleapis.com/**",
          "https://fonts.gstatic.com/**",
          "https://cdn.jsdelivr.net/npm/flag-icons@7.2.3/**"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-user",
      "urls": [
        "/api/users/me",
        "/api/users/me/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 10,
        "maxAge": "1h",
        "timeout": "5s"
      }
    },
    {
      "name": "api-clubs",
      "urls": [
        "/api/clubs",
        "/api/clubs/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 50,
        "maxAge": "5m",
        "timeout": "5s"
      }
    },
    {
      "name": "api-cigars",
      "urls": [
        "/api/cigars",
        "/api/cigars/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "5s"
      }
    },
    {
      "name": "api-events",
      "urls": [
        "/api/events",
        "/api/events/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 50,
        "maxAge": "5m",
        "timeout": "5s"
      }
    },
    {
      "name": "api-tastings",
      "urls": [
        "/api/tastings",
        "/api/tastings/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "5m",
        "timeout": "5s"
      }
    },
    {
      "name": "supabase-storage",
      "urls": [
        "https://*.supabase.co/storage/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 200,
        "maxAge": "7d"
      }
    }
  ],
  "navigationUrls": [
    "/**",
    "!/__**",
    "!/api/**"
  ],
  "navigationRequestStrategy": "freshness"
}